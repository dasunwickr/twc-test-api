//Prisma Schema File

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//Genders 
enum Gender {
  MALE
  FEMALE
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  contacts      Contact[]

  @@map("users")
}

model Contact {
  id           Int      @id @default(autoincrement())
  name         String
  gender       Gender
  email        String
  phone_number String
  updated_at   DateTime @updatedAt
  created_at   DateTime @default(now())
  user_id      Int

  user User @relation(fields: [user_id], references: [id])

  @@map("contacts")
}
